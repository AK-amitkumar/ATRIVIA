<odoo>
    <data>
        <record id="inherit_res_users_form" model="ir.ui.view">
            <field name="name">inherit.res_users.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">

                    <button name="create_alias" type="object" class="oe_stat_button" icon="fa-inbox"
                            help="Permite al usuario recibir correos entrantes." string="Recibe correos"
                    attrs="{'invisible': [('alias_id','!=',False)]}"/>

                    <button name="disable_alias" type="object" class="oe_stat_button" icon="fa-ban"
                            help="Deshabilita que el usuario recibir correos entrantes." string="No recibe correos"
                            attrs="{'invisible': [('alias_id','=',False)]}"/>

                </xpath>
            </field>
        </record>
    </data>
</odoo>
